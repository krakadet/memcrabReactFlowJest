{
  "plugins": [
    "react",
    "prettier",
    "flowtype"
  ],

  "parser": "babel-eslint",

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
     "airbnb",
    "plugin:flowtype/recommended"
  ],

  "rules": {
    "no-set-state": "off",
    "strict": 0,
    "jsx-quotes": 1,
    "flowtype/require-valid-file-annotation":[
      2,
      "always"
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}